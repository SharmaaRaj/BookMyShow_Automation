<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Suppress all default logging -->
    <root level="OFF"/>

    <!-- Console Appender for Test Steps -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight([%-5level]) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger for Cucumber Steps -->
    <logger name="io.cucumber.core.plugin.PrettyFormatter" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
</configuration>
